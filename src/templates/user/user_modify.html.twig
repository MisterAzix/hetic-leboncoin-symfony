{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}

{% block body %}
    <div class="col">
        <h1>Modification</h1>
        <form action="{{ path('app_user_update_api', { email: user.email }) }}" method="post">
            <div class="mb-3">
                <label for="name" class="form-class">Nom</label>
                <input type="text" class="form-control" id="name" name="name" value="{{ user.name }}">
            </div>
            <div class="mb-3">
                <label for="firstName" class="form-class">Pr√©nom</label>
                <input type="text" class="form-control" id="firstName" name="firstName" value="{{ user.firstName }}">
            </div>
            <div class="mb-3">
                <label for="name" class="form-class">Pseudo</label>
                <input type="text" class="form-control" id="login" name="login" value="{{ user.login }}">
            </div>
            <div class="mb-3">
                <label for="name" class="form-class">Tel</label>
                <input type="text" class="form-control" id="phone" name="phone" value="{{ user.phone }}">
            </div>
            <div class="mb-3">
                <label for="email" class="form-class">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}">
            </div>
            <div class="mb-3">
                <label for="password" class="form-class">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="password" value="{{ user.password }}">
            </div>
            <button type="submit" class="btn btn-primary">Modifier</button>
        </form>
    </div>
{% endblock %}